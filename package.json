{
  "name": "Extinct-memory",
  "version": "1.0.0",
  "description": "Extinct memory",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Zu",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.zu.extinctmemory",
    "productName": "Extinct memory",
    "files": [
      "main.js",
      "zm.js",
      "index.html",
      "style.css",
      "zm.html",
      "win.html",
      "pic/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "asar": false,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Square Circuit"
    }
  }
}
